# Kraken Trading Bot - Environment Variables
# Copy this file to .env and fill in your actual values

# ====================
# TRADING CONFIGURATION
# ====================
# CRITICAL: Set to False for LIVE trading (USE WITH EXTREME CAUTION!)
PAPER_TRADING=True
ENVIRONMENT=development

# ====================
# KRAKEN API CREDENTIALS
# ====================
# Get your API keys from: https://www.kraken.com/u/security/api
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# ====================
# SECURITY
# ====================
# Change these in production!
SECRET_KEY=your-secret-key-change-in-production-CHANGE-THIS
JWT_SECRET_KEY=jwt-secret-key-change-in-production-CHANGE-THIS

# ====================
# DATABASE
# ====================
# SQLite by default, can use PostgreSQL in production
DATABASE_URL=sqlite:///kraken_bot.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# ====================
# ALERT SETTINGS - EMAIL
# ====================
ENABLE_EMAIL_ALERTS=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_TO=alerts@yourdomain.com

# ====================
# ALERT SETTINGS - TELEGRAM
# ====================
ENABLE_TELEGRAM_ALERTS=False
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ====================
# ALERT SETTINGS - DISCORD
# ====================
ENABLE_DISCORD_ALERTS=False
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# ====================
# FEATURE FLAGS
# ====================
ENABLE_FUTURES_TRADING=False
ENABLE_MARGIN_TRADING=False
ENABLE_AUTO_REBALANCE=False
ENABLE_ARBITRAGE=False
ENABLE_MACHINE_LEARNING=False

# ====================
# LOGGING
# ====================
LOG_LEVEL=INFO
DEBUG_MODE=False

# ====================
# WEB SERVER
# ====================
PORT=5000